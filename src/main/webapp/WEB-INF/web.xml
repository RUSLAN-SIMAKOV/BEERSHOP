<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

      <filter>
        <filter-name>auth-filter</filter-name>
        <filter-class>beershop.web.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>auth-filter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>autz-filter</filter-name>
        <filter-class>beershop.web.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>autz-filter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>beershop.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllUsers</servlet-name>
        <servlet-class>beershop.controller.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllUsers</servlet-name>
        <url-pattern>/servlet/getAllUsers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>beershop.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>beershop.controller.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/servlet/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>itemAdding</servlet-name>
        <servlet-class>beershop.controller.ItemAddingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>itemAdding</servlet-name>
        <url-pattern>/servlet/itemAdding</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getAllItems</servlet-name>
        <servlet-class>beershop.controller.GetAllItemsManageController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllItems</servlet-name>
        <url-pattern>/servlet/getAllItems</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteItem</servlet-name>
        <servlet-class>beershop.controller.DeleteItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteItem</servlet-name>
        <url-pattern>/servlet/deleteItem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>purchase</servlet-name>
        <servlet-class>beershop.controller.GetAllItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>purchase</servlet-name>
        <url-pattern>/servlet/purchase</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bucket</servlet-name>
        <servlet-class>beershop.controller.AddItemToBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bucket</servlet-name>
        <url-pattern>/servlet/bucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteItemFromBucket</servlet-name>
        <servlet-class>beershop.controller.DeleteItemFromBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteItemFromBucket</servlet-name>
        <url-pattern>/servlet/deleteItemFromBucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showBucket</servlet-name>
        <servlet-class>beershop.controller.ShowBucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showBucket</servlet-name>
        <url-pattern>/servlet/showBucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showOrder</servlet-name>
        <servlet-class>beershop.controller.ShowItemsInOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showOrder</servlet-name>
        <url-pattern>/servlet/showOrder</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>beershop.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>beershop.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--servlet inject test Users-->
    <servlet>
        <servlet-name>injectTest</servlet-name>
        <servlet-class>beershop.controller.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectTest</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>beershop.controller.InjectInitializer</listener-class>
    </listener>
</web-app>
